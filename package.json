{
  "name": "HA",
  "version": "1.0.0",
  "description": "HealthAssist - A comprehensive PWA for health management",
  "private": true,
  "type": "module",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "cd server && pnpm start",
    "lint": "turbo run lint",
    "seed": "cd server && pnpm run seed",
    "clean": "rm -rf client/node_modules server/node_modules client/dist server/dist .turbo",
    "prepare": "husky"
  },
  "keywords": [
    "health",
    "wellness",
    "pwa",
    "react",
    "nodejs",
    "mongodb",
    "typescript"
  ],
  "author": "Health Hub Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.21",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.8",
    "typescript-eslint": "^8.44.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,md,json}": "prettier --write"
  }
}
