{
  "name": "HA",
  "version": "1.0.0",
  "description": "HealthAssist - A comprehensive PWA for health management",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "cd server && pnpm start",
    "lint": "turbo run lint",
    "seed": "cd server && pnpm run seed",
    "clean": "rm -rf client/node_modules server/node_modules client/dist server/dist .turbo"
  },
  "keywords": [
    "health",
    "wellness",
    "pwa",
    "react",
    "nodejs",
    "mongodb",
    "typescript"
  ],
  "author": "Health Hub Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.17.1",
  "devDependencies": {
    "turbo": "^2.5.8"
  }
}
