{
  "watch": ["src"],
  "ext": "ts,js,json",
  "ignore": [
    "src/**/*.spec.ts",
    "src/**/*.test.ts",
    "node_modules/**/*",
    "dist/**/*",
    "uploads/**/*",
    "*.log",
    "**/*.d.ts",
    "**/*.js.map",
    "**/*.d.ts.map"
  ],
  "exec": "ts-node src/server.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 2000,
  "verbose": false,
  "legacyWatch": false
}
